---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 Not Found" description="Page not Found">
    <main
        class="flex flex-col justify-center items-center h-full grow my-8 mx-52"
    >
        <section class="flex flex-col items-center">
            <h1 class="text-5xl font-bold">404 Not Found</h1>

            <h2 class="text-2xl mb-12">You probably are lost...</h2>

            <a
                href="/"
                class="text-xl bg-red-400 p-2 rounded-md transition-all duration-500 ease-in-out hover:shadow-[3px_4px_0] hover:shadow-red-300 hover:-translate-y-1"
                >Go back</a
            >
        </section>
    </main>
</Layout>
